{
  "name": "codekeeper-react-husky-example",
  "version": "1.0.0",
  "description": "Example React project with CodeKeeper, Husky, and lint-staged",
  "private": true,
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "validate:types": "node scripts/validation/check-as-casts.js",
    "validate:complexity": "node scripts/validation/check-file-complexity.js",
    "validate:docs": "node scripts/validation/check-jsdoc.js",
    "validate:barrel": "node scripts/validation/check-barrel-files.js",
    "test-codekeeper": "npm run lint:check && npm run validate:types && npm run validate:complexity",
    "prepare": "husky install",
    "demo:problems": "echo 'This will show you the problems CodeKeeper catches:' && npm run test-codekeeper",
    "demo:fix": "echo 'Auto-fixing with ESLint...' && npm run lint"
  },
  "dependencies": {
    "@types/node": "^16.18.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "node scripts/validation/check-as-casts.js",
      "node scripts/validation/check-file-complexity.js"
    ],
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}